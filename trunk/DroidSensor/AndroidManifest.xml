<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.sevenleaves.droidsensor" android:versionCode="25"
	android:versionName="1.8.6">
	<application android:icon="@drawable/icon" android:label="@string/app_name">

		<activity android:name=".DroidSensorActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".LocalDeviceActivity" android:label="@string/notice_label"
			android:noHistory="true" android:theme="@android:style/Theme.Dialog">
			<intent-filter>
				<action android:name="org.sevenleaves.droidsensor.LocalDeviceActivity" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name=".SettingsActivity" android:label="Settings"
			android:noHistory="true">
			<intent-filter>
				<action android:name="org.sevenleaves.droidsensor.SettingsActivity" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name=".RemoteBluetoothDeviceActivity"
			android:label="RemoteBluetoothDevice" android:noHistory="true">
			<intent-filter>
				<action android:name="org.sevenleaves.droidsensor.RemoteBluetoothDeviceActivity" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name=".PostMessageActivity" android:label="PostMessage"
			android:noHistory="true">
			<intent-filter>
				<action android:name="org.sevenleaves.droidsensor.PostMessageActivity" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<service android:name=".DroidSensorService" android:process=":remote">
			<intent-filter>
				<action android:name="org.sevenleaves.droidsensor.IDroidSensorService" />
			</intent-filter>
		</service>

	</application>

	<uses-sdk android:minSdkVersion="3" />

	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.BLUETOOTH"></uses-permission>
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN"></uses-permission>
</manifest> 