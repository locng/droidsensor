<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.sevenleaves.droidsensor" android:versionCode="13"
	android:versionName="1.4">
	<application android:icon="@drawable/icon" android:label="@string/app_name">

		<activity android:name=".DroidSensorActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>


		<activity android:name=".SettingsActivity"
			android:label="Settings" android:noHistory="true">
			<intent-filter>
				<action android:name="org.sevenleaves.droidsensor.SettingsActivity" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

<!-- 
		<activity android:name=".OptionMenuActivity" android:label="OptionMenu" />
-->
		<service android:name=".DroidSensorService"
			android:process=":remote">
			<intent-filter>
				<action android:name="org.sevenleaves.droidsensor.IDroidSensorService" />
			</intent-filter>
		</service>
		
	</application>

	<uses-sdk android:minSdkVersion="3" />

	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.BLUETOOTH"></uses-permission>
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN"></uses-permission>
</manifest> 