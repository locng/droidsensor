<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>apiServlet</servlet-name>
    <servlet-class>com.google.appengine.droidsensorserver.ApiServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>removeServlet</servlet-name>
    <servlet-class>com.google.appengine.droidsensorserver.RemoveServlet</servlet-class>
  </servlet>

  <!-- 
  <servlet>
    <servlet-name>migrateServlet</servlet-name>
    <servlet-class>com.google.appengine.droidsensorserver.MigrateServlet</servlet-class>
  </servlet>
   -->
   
  <servlet-mapping>
    <servlet-name>apiServlet</servlet-name>
    <url-pattern>/api</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>removeServlet</servlet-name>
    <url-pattern>/remove</url-pattern>
  </servlet-mapping>

  <!-- 
  <servlet-mapping>
    <servlet-name>migrateServlet</servlet-name>
    <url-pattern>/migrate</url-pattern>
  </servlet-mapping>
   -->
   
  <!-- Default page to serve -->
  <!-- 
  <welcome-file-list>
    <welcome-file>DroidSensorServer.html</welcome-file>
  </welcome-file-list>
	-->
</web-app>
